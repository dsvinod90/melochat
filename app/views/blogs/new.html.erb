<div class='content-font'>
    <%= form_with model: @blog, local: true do |f| %>
        <div class='row blog-content justify-content-center'>
            <div class='input-group'>
              <div class="input-group-prepend">
                <span class="input-group-text">Title of the Article</span>
              </div>
              <%= f.text_field :title, class: 'form-control' %>
            </div>
        </div>
        <div class='row blog-content justify-content-center'>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <label class="input-group-text" for="inputGroupCountry">Options</label>
              </div>
            <%= f.select :category, Blog::Categories::ALL, { prompt: 'Select a Category' }, { id: 'inputGroupCountry', style: "width: 380px;", class: 'custom-select'}%>
            </div>
        </div>
        <div class='row blog-content justify-content-center'>
            <div class='input-group'>
              <div class="input-group-prepend">
                <span class="input-group-text">Short Description of the Article</span>
              </div>
            <%= f.text_field :description, class: 'form-control' %>
            </div>
        </div>
        <div class='row blog-content justify-content-center'>
            <%= f.text_area :body, id: 'blog-body' %>
        </div>
        <div class='row blog-content justify-content-center'>
            <%= f.submit "Create", class: 'btn btn-primary add-edit' %>
        </div>
    <% end %>
</div>
<script>
    var easyMDE = new EasyMDE({
        autoDownloadFontAwesome: false,
        element: document.getElementById('blog-body'),
        showIcons: ['strikethrough', 'code', 'table', 'redo', 'heading', 'undo', 'heading-bigger', 'heading-smaller', 'heading-1', 'heading-2', 'heading-3', 'clean-block', 'horizontal-rule'],
        initialValue: '# Write Blogs using markdown \n Go ahead, play around with the editor! Be sure to check out **bold**, *italic* and ~~strikethrough~~ styling, [links](https://google.com) and all the other features. You can type the Markdown syntax, use the toolbar, or use shortcuts like `ctrl-b` or `cmd-b`.'
    });
</script>
